{
  "name": "Open in PDF Reader",
  "short_name": "iowpviewer",
  "description": "Adds a context menu item to send PDF links directly to a PDF viewer like Adobe Acrobat Reader",
  "author": "Andy Portmen",
  "version": "0.1.2",
  "manifest_version": 2,
  "default_locale": "en",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "notifications",
    "nativeMessaging",
    "downloads",
    "https://api.github.com/repos/andy-portmen/native-client/releases/latest"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "config.js",
      "common.js"
    ]
  },
  "homepage_url": "http://add0n.com/open-in.html?from=pdf",
  "icons": {
    "16": "data/icons/16.png",
    "19": "data/icons/19.png",
    "32": "data/icons/32.png",
    "38": "data/icons/38.png",
    "48": "data/icons/48.png",
    "128": "data/icons/128.png"
  },
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "19": "data/icons/19.png",
      "32": "data/icons/32.png",
      "38": "data/icons/38.png"
    }
  },
  "content_scripts": [{
    "match_about_blank": true,
    "matches": ["<all_urls>"],
    "js": ["data/inject.js"],
    "run_at": "document_start",
    "all_frames": true
  }],
  "applications": {
    "gecko": {
      "id": "{0d3afca0-aedf-491f-b0f9-9ffc22113ea8}",
      "strict_min_version": "52.0"
    }
  }
}
